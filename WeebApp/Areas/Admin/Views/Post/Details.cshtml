@model WeebApp.Models.Domain.Post

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>

    </dl>

</div>
<div>
    <div class="form-group" style="float:left;">
        <button type="button" onclick="Approve()" class="btn btn-primary" id="btn1">Approve</button>
        <button type="button" onclick="Reject()" class="btn btn-primary" id="btn2">Reject</button>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script>
        function Approve() {
            $.ajax({
                url: "@Url.Action("Approve")",
                method: "POST",
                data: { id: "@Model.Id"},
                async: true,
                success: function (data) {
                    $("#btn1").text("Approved");
                    $("#btn2").text("Reject");
                },
                error: function (data) {
                    alert("Error");
                }
            });
        }
        function Reject() {
            $.ajax({
                url: "@Url.Action("Reject")",
                method: "POST",
                data: { id: "@Model.Id"},
                async: true,
                success: function (data) {
                    $("#btn2").text("Rejected");
                    $("#btn1").text("Approve");
                },
            });
        }
    </script>
    
}